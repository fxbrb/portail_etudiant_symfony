{% extends 'base.html.twig' %}

{% block title %}Hello noteController!{% endblock %}

{% block body %}
    <h1>note</h1>

    <table border="1">
        <thead>
        <tr>
            <th>Note</th>
            <th>Commentaire</th>

        </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>
                        {{note.note}}
                </td>
                <td>{{note.commentaire}}</td>


            </tr>
        {% else %}
            <tr>
                <td colspan="2">Il n'y a pas de note</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h2>Ajouter un note</h2>
    {{form(ajout)}}
{% endblock %}
